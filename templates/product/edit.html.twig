{% extends 'default.html.twig' %}

{% block title %}Éditer un produit du catalogue{% endblock %}

{% block main %}

    <section>

    <br>

    <h1>Éditer un produit du catalogue</h1>

    <hr class="my-4">

        {% for message in app.flashes('product_success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('product_danger') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

    <a href="{{ path('product_index') }}" class="btn btn-primary col-sm text-left text-white"><i class="far fa-eye"></i><b> Re‑venir à la liste des Produits</b></a>
    <br><br>

    {{ form_start(form) }}

    {#
    Il est important de savoir qu'en plus de :
    - form(),
    qui affiche tout automatique‑mênt sans stylisation possible.

    Il existe :
    - form_start
    - form_row (label & widget)
    - form_label
    - form_widget
    - form_end
    - form_error

    #}

    <div class="form-group">
        <h2 class="h6">{{ form_label(form.name) }}</h2>
        {{ form_widget(form.name) }}
    </div>

    <div class="form-group">
        <h2 class="h6">{{ form_label(form.price) }}</h2>
        {{ form_widget(form.price) }}
    </div>

    <div class="form-group">
        <h2 class="h6">{{ form_label(form.promotion) }}</h2>
        {{ form_widget(form.promotion) }}
    </div>

    <div class="form-group">
        <h2 class="h6">{{ 'Description (vous pouvez utiliser des tags HTML, pour un meilleur rendu) :'}}</h2>
        {{ form_widget(form.description) }}
    </div>

    <div class="form-group">
        <h2 class="h6">{{ form_label(form.url) }}</h2>
        {{ form_widget(form.url) }}
    </div>

    <div class="form-group">
        <h2 class="h6">{{ "Image actuel :" }}</h2>
        <img src="{{ asset('img/products/' ~ product.image) }}" title="{{ product.name }}" alt="{{ product.name }}" class="img-thumbnail w-50">
    </div>

    <div class="form-group">
        <h2 class="h6">{{ "Changer l'image, si vous le voulez :" }}</h2>
        {{ form_widget(form.image) }}
    </div>

    <div class="form-group">
        <h2 class="h6">{{ form_label(form.date_added) }}</h2>
        {{ form_widget(form.date_added) }}
    </div>

    <div class="form-group">
        <h2 class="h6">{{ form_label(form.category) }}</h2>
        {{ form_widget(form.category) }}
    </div>

    <!-- Impossible de trouver quelconque information sur commênt créé une option dans le Twig pour un form_row, documentation très très mal faite et très incomplete. -->

        <hr class="my-4">

    <button class="btn btn-info col text-left"><i class="fas fa-edit"></i><b> {{ button_label|default('Mettre à jour / Modi‑fier') }}</b></button>

    <br><br>

    {{ form_end(form) }}

    {{ include('product/_delete_form.html.twig') }}

    <br><br>

    </section>

{% endblock %}
