{% extends 'default.html.twig' %}

{% block title %}Éditer la catégorie{% endblock %}

{% block main %}

    <br>

    <h1>Éditer la catégorie : « {{ category.categories }} »</h1>

    <hr class="my-4">

    {% for message in app.flashes('category_success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('category_danger') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    <a href="{{ path('category_index') }}" class="btn btn-primary col-sm text-left text-white"><i class="far fa-eye" role="button"></i><b> Re‑venir à la liste de Catégorie</b></a>

    <br><br>

    {{ include('category/_form.html.twig', {'button_label': ' Mettre à jour / Modi‑fier'}) }}

    <br>

    {{ include('category/_delete_form.html.twig') }}


{% endblock %}
